@model EntityLayer.Concrete.Category

@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h1>Yeni Kategori Ekleme </h1>
<br />
@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Kategori Adi")
    @Html.TextBoxFor(x => x.CategoryName);
    @Html.ValidationMessageFor(x => x.CategoryName);
    <br /><br />
    @Html.Label("Aciklama Yaziniz");
    @Html.TextBoxFor(x => x.CategoryDescreption);
    @Html.ValidationMessageFor(x => x.CategoryDescreption);
    <br /><br />
    <button>Kaydet</button>
</div>
}
