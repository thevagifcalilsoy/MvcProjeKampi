@using EntityLayer.Concrete
@model List<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adi</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başliklar</th>

    </tr>

    @foreach (var X in Model)
    {
        <tr>
            <th>@X.CategoryId</th>
            <td>@X.CategoryName</td>
            <td><a href="/AdminCategory/DeleteCategory/@X.CategoryId" class="btn btn-danger">Sil</a></td>
            <td><a href="/AdminCategory/EditCategory/@X.CategoryId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="#" class="btn btn-primary">Başliklar</a></td>
        </tr>

    }

</table>
<br />
<a href="/AdminCategory/AddCategory" class="btn btn-success">Yeni Kategori</a> 