@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h1>Yeni Kategori Ekleme </h1>
<br />
@using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adi")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" });
        @Html.ValidationMessageFor(x => x.CategoryName);
        <br /><br />
        @Html.Label("Aciklama Yaziniz");
        @Html.TextAreaFor(x => x.CategoryDescreption,new {@class="form-control"});
        @Html.ValidationMessageFor(x => x.CategoryDescreption);
        <br /><br />
        <button class="btn btn-success">Kaydet</button>
    </div>
}
