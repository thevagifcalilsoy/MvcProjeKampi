@using EntityLayer.Concrete
@model List<Admin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanici Mail</th>
        <th>Yetki</th>
        <th>Status</th>
        <th>Pasif Yap</th>
        <th>Yetkisini Değiştir</th>

    </tr>

    @foreach (var X in Model)
    {
        <tr>
            <th>@X.AdminId</th>
            <td>@X.AdminUserName</td>
            <td>@X.AdminRole</td>
            <td>Aktif</td>
            <td><a href="/AdminCategory/DeleteCategory/@X.AdminId" class="btn btn-danger">Pasif Yap</a></td>
            <td><a href="/Authorization/EditAdmin/@X.AdminId" class="btn btn-warning">Yetkisini Değiştir</a></td>
            
        </tr>

    }

</table>
<br />
<a href="/Authorization/AddAdmin" class="btn btn-success">Yeni Admin Tanimla</a>

